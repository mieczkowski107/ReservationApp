@using ReservationApp.Models
@model List<Company>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class=" text-primary">
                Company List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create new company </a>
        </div>
    </div>
</div>

<div class="">
    <table class="table table-striped table-bordered text-center justify-content-center shadow">
        <thead>
            <tr>
                <th class="table-info">
                    Name
                </th>
                <th class="table-info">
                    Address
                </th>
                <th class="table-info">
                    Contact
                </th>
                <th class="table-info">
                    Category
                </th>
                <th class="table-info">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                       Address: @item.Address <br />
                        City: @item.City<br />
                        State: @item.State<br />
                        Zip: @item.Zip<br />
                    </td>
                    <td>
                        Phone: @item.Phone <br />
                        Email: @item.Email<br />
                    </td>
                    <td>
                        @item.Category.Name
                    </td>
                    <td class="w-auto">
                        <div class="row justify-content-center">
                            <a asp-controller="Company" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2 w-auto"> <i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2 w-auto"> <i class="bi bi-trash-fill"></i></a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


