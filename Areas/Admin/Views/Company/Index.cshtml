@using ReservationApp.Models
@model List<Company>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class=" text-primary">
                Company List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create new company </a>
        </div>
    </div>
</div>

<div class="">
    <table class="table table-striped table-bordered text-center justify-content-center shadow">
        <thead>
            <tr>
                <th class="table-info">
                    Name
                </th>
                <th class="table-info">
                    Address
                </th>
                <th class="table-info">
                    Contact
                </th>
                <th class="table-info">
                    Category
                </th>
                <th class="table-info px-0">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        Address: @item.Address <br />
                        City: @item.City<br />
                        State: @item.State<br />
                        Zip: @item.Zip<br />
                    </td>
                    <td>
                        Phone: @item.Phone <br />
                        Email: @item.Email<br />
                    </td>
                    <td>
                        @item.Category.Name
                    </td>
                    <td class="pt-4 px-0">
                        <div class="container px-0">
                            <div class="dropdown px-0">
                                <a class="nav-link dropdown-toggle show btn btn-outline-info m-1" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Actions</a>
                                <div class="dropdown-menu"  data-bs-popper="static">
                                    <a asp-area="Admin" asp-controller="Appointment" asp-action="Index" asp-route-Id="@item.Id" class="dropdown-item p-2"> Appointments <i class="bi bi-card-list m-0"></i></a>
                                    <a asp-controller="Service" asp-action="Index" asp-route-Id="@item.Id" class="dropdown-item p-2 "> Services <i class="bi bi-boxes"></i></a>
                                    <hr class="dropdown-divider" />

                                    <a asp-controller="Company" asp-action="Upsert" asp-route-Id="@item.Id" class="dropdown-item btn-primary p-2 ">Edit <i class="bi bi-pencil-square"></i></a>
                                    <a asp-controller="Company" asp-action="Delete" asp-route-Id="@item.Id" class="dropdown-item btn-danger p-2">Delete <i class="bi bi-trash-fill"></i></a>
                                </div>
                               @*  <div class="row-cols-1 mb-1 "> *@
                               @*      <a asp-area="Admin" asp-controller="Appointment" asp-action="Index" asp-route-Id="@item.Id" class="btn btn-sm btn-warning p-2 col-4 col-md-5"> Appointments <i class="bi bi-card-list m-0"></i></a> *@
                               @*      <a asp-controller="Company" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-sm btn-primary p-2 col-3">Edit <i class="bi bi-pencil-square"></i></a> *@
                               @*  </div> *@
                               @*  <div class="row-cols-2"> *@
                               @*      <a asp-controller="Service" asp-action="Index" asp-route-Id="@item.Id" class="btn btn-sm btn-info p-2 col-4 col-md-5"> Services <i class="bi bi-boxes"></i></a> *@
                               @*      <a asp-controller="Company" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger p-2 col-3">Delete <i class="bi bi-trash-fill"></i></a> *@
                               @* </div> *@
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


