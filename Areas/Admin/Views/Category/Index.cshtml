@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class=" text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create new category </a>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered text-center justify-content-center shadow">
    <thead>
        <tr>
            <th class="table-info">
                Id
            </th>
            <th class="table-info">
                Name
            </th>
            <th class="table-info">
                Actions
            </th>
        </tr>
    </thead>
    <tbody class="w-auto">
        @foreach (var item in Model)
        {
            <tr class="w-auto">
                <td>
                    @item.Id
                </td>
                <td class="w-auto">
                    @item.Name
                </td>
                <td class="w-25">
                    <div class="row justify-content-center">
                        <a asp-controller="Category" asp-action="Upsert" asp-route-categoryId="@item.Id" class="btn btn-primary mx-2 w-25"> <i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@item.Id" class="btn btn-danger mx-2 w-25"> <i class="bi bi-trash-fill"></i></a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>

