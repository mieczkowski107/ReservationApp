@model ReportFormVM

<div class="card">
    <div class="card-header">
        <h3>Generate Report</h3>
        <form method="post" asp-area="Admin" asp-controller="Report" asp-action="Result">
            <div class="container">
                <div class="row mt-3 justify-content-between">
                    <div class="col-4 form-floating">
                        <select asp-for="@Model.CompanyId" asp-items="@Model.CompanyList" class="form-select">
                            <option disabled selected>--Select Company--</option>
                        </select>
                    </div>
                    <div class="col-4 form-floating">
                        <input asp-for="@Model.StartRangeDate" class="form-control" type="date" id="startDate"  value=""/>
                        <label asp-for="@Model.StartRangeDate" class="form-label"></label>
                        <span asp-validation-for="StartRangeDate" class="text-danger"></span>
                    </div>
                    <div class="col-4 form-floating">
                        <input asp-for="@Model.EndRangeDate" class="form-control" type="date" id="endDate" value="" />
                        <label asp-for="@Model.EndRangeDate" class="form-label"></label>
                        <span asp-validation-for="EndRangeDate" class="text-danger"></span>
                    </div>
                    <div class="col-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary w-100">Check</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

  


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
