@using ReservationApp.Models
@model List<Service>

<div class="card border-primary">
    <div class="card-header shadow  bg-primary pt-3">
        <h3 class="text-white text-center ">@Model[0].Company.Name</h3>

        <h5 class="text-white text-center">Available services:</h5>
    </div>
    <p class="">
        <span class="text-white">
            <div class="px-5">
                <p class="fw-bold m-0 display-6">About us:</p>
                @Html.Raw(Model[0].Company.Description)
            </div>
        </span>
    </p>
    <hr class="m-0 pb-3"/>
    @foreach (var item in Model)
    {
        <div class="card-body p-3 border-primary" >
            <div class="card mb-3 border-primary">
                <div class="card-header shadow border-primary">
                    <div class="container">
                        <div class="row">
                            <div class="col-6">
                                <h3>@item.Name</h3>
                            </div>
                            <div class="col-6  text-end">
                                <a asp-area="Customer" asp-controller="Appointment" asp-action="Index"  asp-route-ServiceId = "@item.Id"  class="btn btn-info text-end" >
                                    Book <i class="bi bi-bookmark"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <p class="m-0 col-6 text-dark opacity-75  mb-0">
                                <span>
                                    @Html.Raw(item.Description)
                                </span>
                            </p>
                            <p class="m-0 col-3 text-dark opacity-75  mb-0 fw-bold">
                                Duration:
                                <span class="">

                                    @item.DurationMinutes.TotalMinutes minutes
                                </span>
                            </p>
                            <p class="m-0 col-3 text-dark opacity-75  mb-0 fw-bold">
                                Price
                                <span class="">
                                    @item.Price.ToString("C")
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }

   
   
</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            $('#exampleModalLong').modal('handleUpdate'); // Upewnia się, że modal jest poprawnie zainicjalizowany
        });
    </script>
}

