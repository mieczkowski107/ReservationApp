@using ReservationApp.Models
@model List<Service>
<div class="card">
    <div class="card-header shadow  bg-primary pt-3">
        <h3 class="text-white text-center ">@Model[0].Company.Name</h3>

        <h5 class="text-white text-center">Available services:</h5>
    </div>
    <p class="">
        <span class="text-white">
            @Html.Raw(Model[0].Company.Description)
        </span>

    </p>
    @foreach(var item in Model)
    {
        <div class="card-body p-3">
            <div class="card mb-3">
                <div class="card-header shadow border-black">
                    <div class="container">
                        <div class="row">
                            <div class="col-6">
                                <h3>@item.Name</h3>
                            </div>
                            <div class="col-6  text-end">
                                <a asp-controller="reservation" asp-action="index" class="btn btn-info text-end">
                                    Book <i class="bi bi-bookmark"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <p class="m-0 col-6 text-dark opacity-75  mb-0">
                                <span>
                                    @item.Description
                                </span>
                            </p>
                            <p class="m-0 col-3 text-dark opacity-75  mb-0 fw-bold">
                                Duration:
                                <span class="">
                                    
                                    @item.DurationMinutes.TotalMinutes minutes
                                </span>
                            </p>
                            <p class="m-0 col-3 text-dark opacity-75  mb-0 fw-bold">
                                Price
                                <span class="">
                                    @item.Price.ToString("C")
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
   

</div>
