@using ReservationApp.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReservationApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReservationApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary px-4 py-3 mb-3" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand " asp-area="Customer" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" width="50" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto text-white">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Customer" asp-controller="Home" asp-action="Index">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " href="#">Pricing</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link  text-white" href="#">About</a>
                        </li>
                        @if (User.IsInRole(Enum.GetName(Role.Admin)!) || User.IsInRole(Enum.GetName(Role.CompanyManager)!))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Content Mangament</a>
                                <div class="dropdown-menu">
                                    @if(User.IsInRole(Enum.GetName(Role.Admin)))
                                    {
                                        <a class="dropdown-item text-white text-center" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                                    }
                                    <a class="dropdown-item text-white text-center" asp-area="Admin" asp-controller="Company" asp-action="Index">Company</a>
                                    <a class="dropdown-item text-white text-center" href="#">Action</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-white" href="#">Separated link</a>
                                </div>
                            </li>
                        }
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0 mx-1" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 px-3">
            <partial name="_Notifications" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-primary">
        <div class="container text-white text-center">
            &copy; 2025 - ReservationApp - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-white">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.tiny.cloud/1/zblvnhjnh8jmx26kj7dk9zi73g86b7ta2wm52ydc2b9en2le/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="sweetalert2.all.min.js"></script>
    <script src="toastr.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
